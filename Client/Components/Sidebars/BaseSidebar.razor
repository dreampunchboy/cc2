@* Excel-style sidebar frame: title bar + close button, ChildContent for workflow *@
@if (IsOpen)
{
    <div class="excel-sidebar">
        <div class="excel-sidebar__header">
            <span class="excel-sidebar__title">@Title</span>
            <button type="button"
                    class="excel-sidebar__close"
                    aria-label="Close"
                    @onclick="HandleClose">âœ•</button>
        </div>
        <div class="excel-sidebar__body">
            @ChildContent
        </div>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private async Task HandleClose()
    {
        await OnClose.InvokeAsync();
    }
}
